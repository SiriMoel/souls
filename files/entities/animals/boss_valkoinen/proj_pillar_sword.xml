<Entity 
  name="$projectile_default" tags="projectile,death_cross"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="0"
			mass="0.08"
			>
    	</VelocityComponent> 
	</Base>
	
	<HomingComponent
		target_tag="player_unit"
		homing_targeting_coeff="1"
		detect_distance="350"
		homing_velocity_multiplier="1"
		>
	</HomingComponent>

    <AreaDamageComponent
			circle_radius="5"
			damage_per_frame="0.3"
			update_every_n_frame="1"
			entity_responsible=""
			death_cause="Valkoinen's Touch"
		></AreaDamageComponent>

  <ProjectileComponent 
    _enabled="1" 
	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="0"
  	speed_max="0"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
    damage="0.5"
    on_collision_die="0"
	bounces_left="20"
    lifetime="110"
	shoot_light_flash_r="35"
    shoot_light_flash_g="210"
    shoot_light_flash_b="255"
    shoot_light_flash_radius="90"
	knockback_force="1.6"
	damage_every_x_frames="15"
	>
    <config_explosion
      never_cache="1" 
      camera_shake="30.5" 
      explosion_radius="15" 
      explosion_sprite="data/particles/explosion_032_plasma.xml" 
      explosion_sprite_lifetime="0.0" 
      create_cell_probability="1" 
      create_cell_material="soul_particles"
	  explosion_sprite_additive="1"
	  ray_energy="50000"
      hole_destroy_liquid="1" 
      hole_enabled="1" 
	  damage = "40"
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="0" 
      damage_mortals="1"
	  physics_explosion_power.min="1.2"
      physics_explosion_power.max="2.2"
	  physics_throw_enabled="1"
      shake_vegetation="1"  
      sparks_enabled="1" 
      sparks_count_max="8" 
      sparks_count_min="4"
	  spark_material="soul_particles"
      light_fade_time="1.2" 
	  light_r="15"
	  light_g="180"
      light_b="250"
      stains_enabled="1" 
      stains_image="data/temp/explosion_stain.png" 
      audio_event_name="explosions/magic_rocket_mid" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="0" 
    alpha="1" 
    image_file="data/projectiles_gfx/glow.xml" 
    next_rect_animation="" 
    offset_x="32" 
    offset_y="32" 
    rect_animation="fireball" 
    additive="1"
	update_transform_rotation="0"
	>
  </SpriteComponent>

    <SpriteComponent 
    _enabled="1" 
    image_file="mods/souls/files/entities/animals/boss_valkoinen/sprite_sword.xml" 
    next_rect_animation="" 
    offset_x="32" 
    offset_y="32" 
    rect_animation="fireball" 
	update_transform_rotation="0"
	>
  </SpriteComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="250" 
    r="40"
    g="185"
    b="250">
  </LightComponent>
  
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/death_cross_big">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/souls/files/entities/animals/boss_valkoinen/proj_pillar_sword.xml"
		>
	</VariableStorageComponent>
</Entity>