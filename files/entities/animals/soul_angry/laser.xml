<Entity 
  name="$projectile_default" tags=""
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="4"
			gravity_y="0"
			mass="0.04"
		>
		</VelocityComponent>
	</Base>

    <HomingComponent
		target_tag="player_unit"
		homing_targeting_coeff="25"
		detect_distance="180"
		homing_velocity_multiplier="1"
		>
	</HomingComponent>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="80"
    speed_max="110"
    friction="5"
    direction_random_rad="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="1"
	die_on_liquid_collision="1"
    lifetime="250"
    damage="0.17"
    penetrate_entities="1"
    penetrate_world="1"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0.01"
    ragdoll_fx_on_collision="BLOOD_SPRAY"
    hit_particle_force_multiplier="0.25"
    camera_shake_when_shot="5.0"
    bounces_left="10"
	muzzle_flash_file=""
	shoot_light_flash_radius="180"
    shoot_light_flash_r="120"
    shoot_light_flash_g="210"
    shoot_light_flash_b="70" 
	knockback_force="2.0"
	physics_impulse_coeff="2000"
	>
    <config_explosion
      never_cache="1" 
      never_cache="1"
      camera_shake="4.5" 
      explosion_radius="3"
      explosion_sprite="data/particles/explosion_016_plasma_blue.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_material="souls_soul_particles"
      create_cell_probability="15" 
      hole_destroy_liquid="0"
	  explosion_sprite_additive="1"
      hole_enabled="1"
      ray_energy="100000"
	  damage="0.07"
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="0 " 
      damage_mortals="1" 
      gore_particle_count="8"
	  physics_explosion_power.min="0.2" 
      physics_explosion_power.max="0.35" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="20" 
      sparks_count_min="7" 
      sparks_enabled="0" 
      stains_enabled="1"
	    stains_radius="4" 
      light_fade_time="0.2"
      light_r="10"
      light_g="30"
      light_b="30">
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/souls/files/entities/animals/soul_angry/laser_sprite.xml"
    next_rect_animation="" 
    offset_x="2" 
    offset_y="2" 
    rect_animation=""
    
     >
  </SpriteComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="100"
    g="255"
    b="255">
  </LightComponent>

  <ParticleEmitterComponent 
    emitted_material_name="souls_soul_particles"
    offset.x="0"
    offset.y="0"
	gravity.y="0.0"
	x_vel_min="0"
    x_vel_max="0"
    y_vel_min="-2"
    y_vel_max="2"
    count_min="3"
    count_max="6"
	is_trail="1"
	trail_gap="0.5"
    lifetime_min="0.3"
    lifetime_max="1.5"
    emit_real_particles="0"
	render_on_grid="1"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    is_emitting="1" >
  </ParticleEmitterComponent>

  <ParticleEmitterComponent 
		emitted_material_name="souls_soul_particles"
		gravity.y="0.0"
		lifetime_min="1"
		lifetime_max="2"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="0"
		y_vel_max="0"
		count_min="25"
		count_max="45"
		render_on_grid="1"
		fade_based_on_lifetime="0"
		area_circle_radius.min="2"
		area_circle_radius.max="2"
		cosmetic_force_create="1"
		collide_with_grid="0"
		airflow_force="0.051"
		airflow_time="1.01"
		airflow_scale="0.03"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		velocity_always_away_from_center="11"
		render_back="1"
		is_emitting="1" >
	</ParticleEmitterComponent>

  	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_tele" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/souls/files/entities/animals/soul_angry/laser.xml"
		>
	</VariableStorageComponent>

</Entity>