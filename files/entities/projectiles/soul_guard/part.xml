			gravity_y="0"
			air_friction="0"
			>
		</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="0"
		speed_max="0"
		die_on_low_velocity="0"
